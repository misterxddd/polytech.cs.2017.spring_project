SHELL = /bin/sh

PROJECT  := AlghHuff

# ------------------
# External programs
# ------------------
CC  := gcc
RM  := rm -rf

# --------------------
# Directories & Files
# --------------------
D_SRC    := ./src
FILES_C  := $(wildcard $(D_SRC)/*.c)
FILES_O  := $(FILES_C:.c=.o)


# ------------
# Flags 
# ------------
CFLAGS  :=-c -Wall


# ------------
# Targets 
# ------------
default: AlghHuff

AlghHuff: main.o files.o dynamic_array.o HaffmanAlgh.o
	$(CC) main.o files.o dynamic_array.o HaffmanAlgh.o -o AlghHuff

main.o: main.c
	$(CC) $(CFLAGS) main.c

files.o: files.c
